)

declare -A PRO_FILES=(
	[$SLG_LIB]="USB.pro"
	[$UPDATER]="Updater.pro"
	[$LAUNCHER]="GPAKLauncherLib.pro"
	[$GP1]="GreenPAK1Designer.pro"
	[$GP2]="GreenPAK2Designer.pro"
	[$GP3]="GreenPAK3Designer.pro"
	[$GP4]="GreenPAK4Designer.pro"
	[$GP5]="GreenPAK5Designer.pro"
)


QT_FOLDER=$PROGRAM_INSTALLATION_ROOT
QT_VERSION="5.7.0"
QMAKE_BIN="${QT_FOLDER}/bin/qmake"
QMAKE_ARG="\"CONFIG+=release\" \"CONFIG+=warn_off\" \"CONFIG+=silent\""


OUTPUT_BINS_FOLDER="$PROJECTS_FOLDER/${PROJECT_DIR[$SLG_LIB]}/bin/release/$QT_VERSION"

BIN_FILES_MASK="GP*"
LIB_FILES_MASK="*.so.*"

BIN_FILES_RESOURCES_DIR="$ARCH_DEPENDENT_FILES_PREFIX/bin"
LIB_FILES_RESOURCES_DIR="$ARCH_DEPENDENT_FILES_PREFIX/lib"



